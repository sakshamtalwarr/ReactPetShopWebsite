rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Match public data for the specific app
    match /artifacts/{appId}/public/data/{document=**} {
      allow read, write: if request.auth != null; // Allow read/write if any user is authenticated
    }

    // Match private user data for the specific app and user
    match /artifacts/{appId}/users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId; // Allow read/write only if the authenticated user's UID matches the userId in the path
    }

    // Optional: Deny all other access by default
    match /{document=**} {
      allow read, write: false;
    }
  }
}